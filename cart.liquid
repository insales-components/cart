<div class="container">
  {% include "breadcrumb" %}
  <div class="page-title cart-title">
    Корзина
  </div>
  <div class="cart-top" data-cartman-items-text>
  </div>
</div>

<div class="cart-form">
  <div class="container">
    <div class="cart-empty notice is-info {% unless cart.items.size == 0 %}hide{% endunless %}">
      Корзина пуста
    </div>
  </div>

  {% if cart.items.size > 0 %}
  <div class="container">
    <form action="{{ cart_url }}" method="post" data-cart-form>
      <input type="hidden" name="_method" value="put">
      <input type="hidden" name="make_order" value="">
      <div class="cart-items">
        {% for item in cart.items %}
          {% include "cart_item" %}
        {% endfor %}
      </div>

        <div class="row flex-middle cart-footer">
          <div class="cell-6">
            {% include "discounts" %}
          </div>
          <div class="cell-6">
            <div class="cart-totals text-right row flex-between">
              <div class="cart-total-capture">Итоговый заказ: </div>
              <div class="cart-total" data-cartman-total-price>
                {{ cart.total_price | money }}
              </div>
            </div>
            <div class="cart-order text-right">
              <button type="submit"  class="cart-submit btn-primary btn" data-cart-submit>оформить заказ</button>
              <button type="button"  class="btn btn-secondary" data-quick-checkout>Купить в 1 клик</button>
            </div>
          </div>

        </div>

    </form>
  </div>

  <div class="container">
    {% include "cart_similar" %}
  </div>
  {% endif %}

</div>
